{
  "name": "lwr-site-builder",
  "version": "1.0.0",
  "description": "Production-ready Website Builder with LWR and Node.js backend",
  "scripts": {
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd ../backend && npm start",
    "start:frontend": "lwr dev --port 3002",
    "build": "lwr build",
    "vercel-build": "lwr build",
    "start": "node server.js",
    "lwr:dev": "lwr dev --port 3002"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lwc": "^8.28.0",
    "lwr": "^0.21.4",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}